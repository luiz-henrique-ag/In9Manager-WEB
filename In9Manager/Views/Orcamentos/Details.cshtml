@model In9Manager.Models.Orcamento

@{
    ViewData["Title"] = "Details";
    var Status = new Dictionary<int, object>();
    foreach (var item in Enum.GetValues(typeof(OrcamentoStatus)))
    {
        Status.Add((int)item, item);
    }
    var FormaPagamento = new Dictionary<int, object>();
    foreach (var item in Enum.GetValues(typeof(OrcamentoFormaPagamento)))
    {
        FormaPagamento.Add((int)item, item);
    }
}

<h1>Details</h1>

<div>
    <h4>Orcamento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class = "col-sm-10">
            <a asp-controller="Clientes" asp-action="Details" asp-route-Id="@Model.Cliente.Id">@Html.DisplayFor(model => model.Cliente.Nome)</a>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataCriacao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataCriacao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataValidade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataValidade)
        </dd>
        <dt class = "col-sm-2">
            Identificador do Veículo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PlacaVeiculo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorTotal)
        </dt>
        <dd class = "col-sm-10">
            R$ @Html.DisplayFor(model => model.ValorTotal) 
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Desconto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Desconto) %
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorFinal)
        </dt>
        <dd class = "col-sm-10">
            R$ @Html.DisplayFor(model => model.ValorFinal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Status[Model.Status]
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FormaPagamento)
        </dt>
        <dd class = "col-sm-10">
            @FormaPagamento[Model.FormaPagamento]
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroParcelas)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumeroParcelas)
        </dd>
        <dt class="col-sm-2">
            Serviços
        </dt>
        @foreach(var item in Model.Servicos)
        {
            <dt class="col-sm-2"></dt>
            <dd class="col-sm-10">
                @item.Servico.Nome
            </dd>
        }
    </dl>
</div>
<div class="mb-3">
    <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model?.Id">Alterar</a>
</div>
<a asp-action="Index">Voltar</a>
