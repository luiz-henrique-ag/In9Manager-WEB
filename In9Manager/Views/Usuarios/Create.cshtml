@model In9Manager.Models.Usuario

@{
    ViewData["Title"] = "Cadastrar";
    SelectList permissao = new SelectList(Enum.GetValues(typeof(Permissao)));
}

<h1>Cadastrar</h1>

<h4>Usuário</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Login" class="form-label"></label>
                        <input asp-for="Login" class="form-control" />
                        <span asp-validation-for="Login" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Cpf" class="form-label"></label>
                        <input asp-for="Cpf" class="form-control" />
                        <span asp-validation-for="Cpf" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Permissao" class="form-label"></label>
                        <select asp-for="Permissao" asp-items="permissao" class="form-select"></select>
                        <span asp-validation-for="Permissao" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Senha" class="form-label"></label>
                        <input asp-for="Senha" class="form-control" type="password"/>
                        <span asp-validation-for="Senha" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="confirmarSenha">Confirmar Senha</label>
                        <input name="confirmarSenha" type="password" class="form-control" id="confirmarSenha"/>
                        <span class="text-danger">@TempData["Erro"]</span>
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <div class="mb-3">
                        <input type="submit" value="Cadastrar" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
